{
    "manifest_version": 3,
    "name": "Story Recommender",
    "version": "1.0",
    "description": "Suggests related stories to keep readers engaged.",
    "permissions": ["scripting", "activeTab", "storage"],
    "host_permissions": ["http://localhost:8000/"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_title": "Story Recommender Settings"
    },
    "commands": {
      "toggle-widget": {
        "suggested_key": {
          "default": "Ctrl+Shift+R",
          "mac": "Command+Shift+R"
        },
        "description": "Toggle story recommendations widget"
      }
    }
  }
  